<div id='page-wrapper'>
  <div class='row'>
    <div class='col-lg-8'>
      <h1 class='page-header'>依頼先グループ一覧</h1>

      <table class="table" id="table_group">
        <thead>
          <tr>
            <th>Name</th>
            <th>Emails</th>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @destgroups.each do |destgroup| %>
          <tr>
            <td><%= destgroup.name %></td>
            <td>
              <% destgroup.destemails.each do |email| %>
                <%= email.email%>&nbsp;
              <% end %>
            </td>
            <td>
              <% if destgroup.flag == "false" %>
                <B class="text-danger">無効</B>
              <% end %>
            </td>
            <td><%= link_to '編集', edit_destgroup_path(destgroup) %></td>
            <td><%= link_to '削除', destgroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to '新しい依頼先グループの作成', new_destgroup_path, :class => "btn btn-outline btn-info" %>
      
    </div>
  </div>
</div>
<script>
$(document).ready(function() {
   $('#table_group').DataTable({
     "ordering": false,
     aoColumns:[
      null,
      { "bSearchable": false },
      { "bSearchable": false },
      { "bSearchable": false },
      { "bSearchable": false }
     ]
   });
});
</script>
