<div id='page-wrapper'>
  <div class='row'>
    <div class='col-lg-12'>
      <h1 class='page-header'>収容一覧</h1>

      <table class="table" id="table_order">
        <thead>
          <tr>
            <th>契約番号</th>
            <th>顧客番号</th>
            <th>依頼先</th>
            <th>ステータス</th>
            <th>依頼日</th>
            <th>予定納期</th>
            <th>依頼者</th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @orders.reverse_each do |order| %>
          <tr>
            <td><%= order.contract_number %></td>
            <td><%= order.customer_number %></td>
            <td>
              <% order.destgroups.each do |group| %>
                <%= group.name %>
              <% end %>
            </td>
            <td><%= order.status %></td>
            <td><%= order.created_at %></td>
            <td><%= order.delivery_date %></td>
            <td><%= order.users[0].username%></td>
            <td><%= link_to '詳細', order %></td>
            <td><%= link_to '編集', edit_order_path(order) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= link_to 'New Order', new_order_path %>

    </div>
  </div>
</div>
<script>
$(document).ready(function() {
   $('#table_order').DataTable({
     "order": [[ 0, "desc" ]],
     aoColumns:[
      null,
      null,
      null,
      null,
      null,
      null,
      null,
      { "bSearchable": false },
      { "bSearchable": false }
     ]
   });
});
</script>