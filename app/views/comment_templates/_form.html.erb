<div class='row'>
  <div class='col-lg-6'>
  <%= form_for(@comment_template, :html => {'data-parsley-validate' => ''}) do |f| %>
    <% if @comment_template.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
      <ul>
      <% @comment_template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, 'テンプレート名' %><br>
      <%= f.text_field :name, class: 'form-control', 'required' => '' %>
    </div>
    <div class="form-group">
      <%= f.label :body, 'テンプレート文' %><br>
      <%= f.text_area :body, class: 'form-control', 'required' => '', rows: "15" %>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-lg-2'>
    <div class="actions">
      <%= f.submit '登録する', class: 'btn btn-success' %>
    </div>
  </div>
  <div class='col-lg-2 col-lg-offset-1'>
    <%= link_to 'キャンセル', comment_templates_path, class: 'btn btn-danger' %>
  </div>
  <% end %>
</div>
