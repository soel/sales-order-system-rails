<div class='row'>
  <div class='col-lg-6'>
  <%= form_for(@customernumber) do |f| %>
    <% if @customernumber.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <ul>
      <% @customernumber.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-lg-4'>
    <div class="form-group">
      <%= f.label :customer_num, '顧客番号' %><br>
      <%= f.number_field :customer_num, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :name, '顧客名' %><br>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-lg-2'>
    <div class="actions">
      <%= f.submit '登録する', class: 'btn btn-success' %>
    </div>
  </div>
  <div class='col-lg-2 col-lg-offset-1'>
    <%= link_to 'キャンセル', customernumbers_path, class: 'btn btn-danger' %>
  </div>
  <% end %>
  </div>
</div>
