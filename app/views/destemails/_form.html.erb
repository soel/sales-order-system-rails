<div class='row'>
  <div class='col-lg-6'>
  <%= form_for(@destemail) do |f| %>
    <% if @destemail.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <ul>
      <% @destemail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-lg-4'>
    <div class="form-group">
      <%= f.text_field :email, class: 'form-control', autofocus: true, :placeholder => "E-mail", :type => "email", required: true %>
    </div>
    <div class="action">
      <%= f.submit '登録する', class: 'btn btn-success'%>
    </div>
  <% end %>
  </div>
</div>
