<div class='row'>
  <div class='col-lg-6'>
  <%= form_for(@destemail, :html => {'data-parsley-validate' => '', 'parsley-use-html5-constraints' => false}) do |f| %>
    <% if @destemail.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <ul>
      <% @destemail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>


    <div class="form-group">
      <%= f.text_field :email, class: 'form-control', autofocus: true, :placeholder => "E-mail", :type => "email", 'required' => '' %>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-lg-2'>
    <div class="action">
      <%= f.submit '登録する', class: 'btn btn-success'%>
    </div>
  </div>
  <div class='col-lg-2 col-lg-offset-1'>
    <%= link_to 'キャンセル', destemails_path, class: 'btn btn-danger' %>
  </div>
  <% end %>
</div>
</div>