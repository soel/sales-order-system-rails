<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">パスワードリセット</h3>
        </div>
        <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, 'data-parsley-validate' => '', 'parsley-use-html5-constraints' => false }) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', autofocus: true, :placeholder => "E-mail", :type => "email", 'required' => '' %>
          </div>
          <% if devise_error_messages!.present? %>
            <% devise_error_messages! %>
            <% message = devise_error_messages! %>
            <div class="alert alert-danger alert-dismissable">
              <%== message.gsub(/<h2>.+<\/h2>/, "") %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "パスワードリセットメールの送信", class: 'btn btn-primary center-block' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
