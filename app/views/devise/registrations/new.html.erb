<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">ユーザ登録</h3>
        </div>
        <div class="panel-body">
        <%= form_for(resource, :html => {'data-parsley-validate' => '', 'parsley-use-html5-constraints' => false}, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', autofocus: true, :placeholder => "E-mail", :type => "email", 'required' => '' %>
          </div>
          <div class="form-group">
            <%= f.text_field :username, class: 'form-control', autofocus: true, :placeholder => "username", 'required' => '' %>
          </div>
          <div class="form-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar, :type => "file" %>
            <%= f.hidden_field :avatar_cache %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <% if @validatable %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", 'required' => '', 'data-parsley-minlength' => @minimum_password_length %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", 'required' => '', 'data-parsley-minlength' => @minimum_password_length %>
          </div>
          <% if devise_error_messages!.present? %>
            <% devise_error_messages! %>
            <% message = devise_error_messages! %>
            <div class="alert alert-danger alert-dismissable">
              <%== message.gsub(/<h2>.+<\/h2>/, "") %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "登録", class: 'btn btn-lg btn-primary btn-block' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
