<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Please Sign In</h3>
				</div>
				<div class="panel-body">
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="form-group">
							<%= f.email_field :email, class: 'form-control', autofocus: true, :placeholder => "E-mail", :type => "email" %>
						</div>
						<div class="form-group">
							<%= f.password_field :password, class: 'form-control', :placeholder => "Password", :type => "password", autocomplete: "off" %>
						</div>
						<% if devise_mapping.rememberable? -%>
							<div class="checkbox">
								<%= f.check_box :remember_me , :type => "checkbox" %>
								<%= f.label :remember_me %>
							</div>
						<% end %>
						<div class="actions">
							<%= f.submit "Log in", class: 'btn btn-lg btn-success btn-block' %>
						</div>
					<% end %>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>
